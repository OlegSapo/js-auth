{{!
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
}}

<div class="page page--background">
    <header>
        {{>back-button}}    {{!-- пыдключаэмо компонент back-button --}}
    </header>

    <form class="page__section">
        <h1 class="page__title">Відновлення паролю</h1>
        <span class="field__label" style="color: blue; font-style: italic;">код відновлення направлено на пошту</span>

        <div class="form">
            <div class="form__item">
                {{>field action='recoveryConfirmForm.change' label='Код підтвердження' name='code' type='number' placeholder='введіть код'}} {{!-- підключаємо компонент field для code --}}
                <span name="code" class="form__error">Помилка</span>
            </div>

            <div class="form__item">
                {{>field-password action='recoveryConfirmForm.change' label='Новий пароль' name='password' type='password' placeholder='password'}} {{!-- підключаємо компонент field для password --}}
                <span name="password" class="form__error">Помилка</span>
            </div>

            <div class="form__item">
                {{>field-password action='recoveryConfirmForm.change' label='Новий пароль ще раз' name='passwordAgain' type='password' placeholder='password'}} {{!-- підключаємо компонент field для password --}}
                <span name="passwordAgain" class="form__error">Помилка</span>
            </div>
        </div>

        <button onclick="recoveryConfirmForm.submit();" class="button button--disabled" type="button">Змінити пароль</button>

        <span class="alert alert--disabled">Внимание, ошибка!</span>
    </form>
</div>

